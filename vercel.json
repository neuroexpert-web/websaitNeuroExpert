{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
        "buildCommand": "python -m compileall api"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm ci --legacy-peer-deps",
        "buildCommand": "npm run build",
        "outputDirectory": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": ".",
    "NODE_ENV": "production",
    "VERCEL_BACKEND_URL": "https://neuroexpert.vercel.app/api"
  },
  "regions": ["iad1"],
  "github": {
    "silent": false,
    "autoAlias": true
  }
}
