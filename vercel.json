{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxDuration": 30,
        "memory": 1024,
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
        "buildCommand": "python -m compileall api"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/index.py",
      "headers": {
        "Cache-Control": "no-store, must-revalidate",
        "X-Request-ID": "{requestId}"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py",
      "headers": {
        "Cache-Control": "no-store, must-revalidate",
        "X-Request-ID": "{requestId}"
      }
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/frontend/_next/static/\\$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/\\$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/\\$1",
      "headers": {
        "Cache-Control": "no-cache",
        "X-Request-ID": "{requestId}"
      }
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "1",
    "VERCEL_BACKEND_URL": "@backend-url",
    "NODE_ENV": "production"
  },
  "github": {
    "silent": false,
    "autoAlias": true
  },
  "regions": ["iad1"]
}
