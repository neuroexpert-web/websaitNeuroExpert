{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
        "buildCommand": "python -m compileall api"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "VERCEL_BACKEND_URL": "https://neuroexpert.vercel.app/api",
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1",
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}
