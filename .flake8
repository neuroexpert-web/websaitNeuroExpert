[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    node_modules,
    .emergent
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
max-complexity = 10
per-file-ignores =
    __init__.py:F401
